<h1>Listing rides</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Total distance</th>
    <th>Difficulty rating</th>
    <th>Date range</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rides.each do |ride| %>
  <tr>
    <td><%= ride.name %></td>
    <td><%= ride.total_distance %> Miles</td>
    <td class="difficulty<%= ride.difficulty_rating %>"><%= ride.difficulty_rating %></td>
    <td><%= ride.date_range.strftime("%B %d %Y") %></td>
    <td><%= link_to 'Show', ride %></td>

  </tr>
<% end %>
</table>

<br />

