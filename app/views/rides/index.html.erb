<h1>Listing rides</h1>

<table>
  <tr>
    <th>Name of Event</th>
    <th>Total distance</th>
    <th>Difficulty rating</th>
    <th>Date range</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rides.each do |ride| %>
  <tr>
    <td><%= ride.name %></td>
    <td><%= ride.total_distance %></td>
    <td><%= ride.difficulty_rating %></td>
    <td><%= ride.date_range %></td>
    <td><%= link_to 'Show', ride %></td>
    <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
    <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

